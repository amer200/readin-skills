<%- include('../lay-outs/head') %>
<%- include('../lay-outs/nav') %>
<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin/admin.css" />
<div class="add-blog">
    <div class='container'>
        <h1>تعديل :<%=post.title %></h1>
        <form class="edit-blog-form" action="/admin/edit-post/<%=post._id%>" method="post" id="blogForm">
            <div class="mb-3">
                <label for="about" class="form-label">العنوان</label>
                <input type="text" class="form-control" name="title" value="<%= post.title %>">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">الصورة</label>
                <input type="text" class="form-control" name="img" value="<%= post.img %>">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">المحتوى</label>
                <textarea class="form-control" id="content" name="content"
                    style="width: 100%; height: 100%; display: none;"></textarea>
                <div id="editor" dir="rtl"><%- post.content %></div>
            </div>
            <button type="button" id="subBtnBlog" class="btn btn-dark">حفظ التعديلات </button>
        </form>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="https://cdn.jsdelivr.net/npm/quill-image-resize-module@3.0.0/image-resize.min.js"></script>
<script src="/js/qull-config.js"></script>
<script src="/js/admin-edit-post.js"></script>
<%- include('../lay-outs/footer') %>