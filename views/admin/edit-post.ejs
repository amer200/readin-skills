<%- include('../lay-outs/head') %>
<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin.css" />
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="text-align: center; background-color: #888 !important;">
    <h3 style="color: #fff; margin-left: auto;
    margin-right: auto;">post admin area / Edit</h3>
</nav>
<div class="add-blog">
    <div class='container'>
        <h1>اضافة موضوع</h1>
        <form action="/admin/edit-post/<%=post._id%>" method="post" id="addForm">
            <div class="mb-3">
                <label for="about" class="form-label">العنوان</label>
                <input type="text" class="form-control" name="title" value="<%= post.title %>">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">الصورة</label>
                <input type="text" class="form-control" name="img" value="<%= post.img %>">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">المحتوى</label>
                <textarea class="form-control" id="hiddenContent" name="content"
                    style="width: 100%; height: 100%; display: none;"></textarea>
                <input type="hidden" name="textContent" id="textContent">
                <div id="editor" dir="rtl"><%- post.content %></div>
            </div>
            <button type="button" id="submitBtn" class="btn btn-dark">اضف </button>
        </form>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
<script src="https://cdn.rawgit.com/kensnyder/quill-image-resize-module/3411c9a7/image-resize.min.js"></script>
<script src="/js/mix.js"></script>
