<%- include('../lay-outs/head') %>
<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin.css" />
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="text-align: center; background-color: #888 !important;">
    <h3 style="color: #fff; margin-left: auto;
    margin-right: auto;">admin area / read app</h3>
</nav>
<div class="prags">
    <div class="container">
        <div class="row">
            <div class="addnew col-lg-12">
                <form action="/admin/add-paragraph" method="post" id="addForm">
                    <div class="mb-3">
                        <label for="about" class="form-label">العنوان</label>
                        <input type="text" class="form-control" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="about" class="form-label">المحتوى</label>
                        <textarea class="form-control" id="hiddenContent" name="content"
                            style="width: 100%; height: 100%; display: none;"></textarea>
                            <input type="hidden" name="wordCount" value=" ">
                        <div id="editor" dir="rtl"></div>
                        <div id="counter">0 words</div>
                    </div>
                    <div class="quiz" id="quiz">
                        <h3>quiz</h3>
                        <div class="mb-3">
                            <label for="about" class="form-label">السوؤال</label>
                            <input type="text" class="form-control" name="quiz" placeholder="السوؤال">
                            <input type="text" class="form-control" name="rightAnswer" placeholder="الاجابة الصحيحة" required>
                            <input type="text" class="form-control" name="wrongAnswerone" placeholder="اجابة خاطئة" required>
                            <input type="text" class="form-control" name="wrongAnswertwo" placeholder="اجابة خاطئة" required>
                            <div class="break"></div>
                        </div>
                    </div>
                    <button type="button" id="addQuiz" class="btn btn-primary"> اضف سوؤال</button>
                    <div class="break"></div>
                    <button type="button" id="submitBtn" class="btn btn-dark">اضف الفقرة</button>

                </form>
            </div>
            <div class="break"></div>
            <% prags.forEach( p => { %>
            <div class="prag col-lg-8">
                    <a href="/admin/edit-prag/<%= p._id %>" class="btn btn-dark">تعديل الفقرة</a>
                <form action="/admin/delete-prag/<%= p._id %>" method="post">
                    <button type="submit" class="btn btn-danger">حذف الفقرة</button>
                </form>
                <h3><%= p.title %></h3>
                <p class="lead"><%- p.contentHtml%></p>
            </div>
            <%})%>
        </div>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
<script src="/js/admin-read-app.js"></script>
<%- include('../lay-outs/footer') %>