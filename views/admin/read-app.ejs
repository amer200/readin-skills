<%- include('../lay-outs/head') %>
<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin.css" />
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="text-align: center; background-color: #888 !important;">
    <h3 style="color: #fff; margin-left: auto;
    margin-right: auto;">admin area / read app</h3>
</nav>
<div class="prags">
    <div class="container">
        <div class="row">
            <div class="addnew col-lg-12">
                <form action="/admin/add-paragraph" method="post">
                    <div class="mb-3">
                        <label for="about" class="form-label">العنوان</label>
                        <input type="text" class="form-control" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="about" class="form-label">المحتوى</label>
                        <textarea class="form-control" id="hiddenContent" name="content"
                        style="width: 100%; height: 100%;" style="display: none;"></textarea>
                        <div id="editor" dir="rtl">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">اضف الفقرة</button>
                </form>
            </div>





            <% prags.forEach( p => { %>
            <div class="prag col-lg-8">
                <form action="/admin/edit-prag">
                    <button type="submit" class="btn btn-dark">تعديل الفقرة</button>
                </form>
                <form action="/admin/delete-prag">
                    <button type="submit" class="btn btn-danger">حذف الفقرة</button>
                </form>
                <p class="lead"><%- p.contentHtml%></p>
            </div>
            <%})%>
        </div>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
    var toolbarOptions = [
        ['bold', 'italic', 'underline', 'strike'], // toggled buttons
        ['blockquote', 'code-block'],

        [{
            'header': 1
        }, {
            'header': 2
        }], // custom button values
        [{
            'list': 'ordered'
        }, {
            'list': 'bullet'
        }],
        [{
            'script': 'sub'
        }, {
            'script': 'super'
        }], // superscript/subscript
        [{
            'indent': '-1'
        }, {
            'indent': '+1'
        }], // outdent/indent
        [{
            'direction': 'rtl'
        }], // text direction

        [{
            'size': ['small', false, 'large', 'huge']
        }], // custom dropdown
        [{
            'header': [1, 2, 3, 4, 5, 6, false]
        }],

        [{
            'color': []
        }, {
            'background': []
        }], // dropdown with defaults from theme
        [{
            'align': []
        }],

        ['clean'] // remove formatting button
    ];

    var quill = new Quill('#editor', {
        modules: {
            toolbar: toolbarOptions
        },
        theme: 'snow'
    });
    const content = document.getElementById('hiddenContent');
    content.value = document.getElementById('editor').innerHTML;
</script>
<%- include('../lay-outs/footer') %>