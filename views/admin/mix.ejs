<%- include('../lay-outs/head') %>
<!-- Include Quill stylesheet -->
<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin.css" />
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="text-align: center; background-color: #888 !important;">
    <h3 style="color: #fff; margin-left: auto;
    margin-right: auto;">post admin area / Edit</h3>
</nav>
<div class="add-blog">
    <div class='container'>
        <h1>اضافة موضوع</h1>
        <form action="/admin/add-mix" method="post" id="addForm">
            <div class="mb-3">
                <label for="about" class="form-label">العنوان</label>
                <input type="text" class="form-control" name="title">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">الصورة</label>
                <input type="text" class="form-control" name="img" placeholder="ادخل رابط الصورة الرئيسية">
            </div>
            <div class="mb-3">
                <label for="about" class="form-label">المحتوى</label>
                <textarea class="form-control" id="hiddenContent" name="content"
                    style="width: 100%; height: 100%; display: none;"></textarea>
                <input type="hidden" name="textContent" id="textContent">
                <div id="editor" dir="rtl"></div>
            </div>
            <button type="button" id="submitBtn" class="btn btn-dark">اضف </button>
        </form>
    </div>
</div>
<div class="break"></div>
<div class="blogs">
    <div class="container">
        <div class="row">
            <% for(let i=0; i< blogs.length-1; i++){ %>
                <div class="col-lg-6">
            <!-- Blog post-->
            <div class="card mb-4">
                <a href="/post/<%=blogs[i]._id%>"><img class="card-img-top" src="<%=blogs[i].img %>"
                        alt="..." /></a>
                <div class="card-body">
                    <h2 class="card-title h4"><%=blogs[i].title%></h2>
                    <p class="card-text"><%=blogs[i].text.substr(0,100)%>...</p>
                    <a class="btn btn-primary" href="/admin/edit-post/<%=blogs[i]._id%>">تعديل</a>
                    <form action="/admin/delete-post/<%=blogs[i]._id%>" method="post">
                        <button type="submit" class="btn btn-danger"> حذف</button>
                    </form>
                </div>
            </div>
        </div>
            <%}%>
        </div>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
<script src="https://cdn.rawgit.com/kensnyder/quill-image-resize-module/3411c9a7/image-resize.min.js"></script>
<script src="/js/mix.js"></script>
