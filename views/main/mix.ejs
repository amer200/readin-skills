<div class="container" style="padding-top: 70px;">
    <% if(blogs === null){%>
    <h1>لا يوجد موضوعات بعد </h1>
    <%}else{%>
    <div class="row">
        <% blogs.forEach( b=>{%>
        <div class="card col-lg-6">
            <img src="<%= b.img %>" class="card-img-top" alt="..." style="height: 250px;">
            <div class="card-body">
                <h5 class="card-title"><%= b.title %></h5>
                <p class="card-text"><%- b.content.substr(0, 400)%></p>
                <a href="/post/<%=b._id%>" class="btn btn-primary">اكمل قراءة</a>
            </div>
        </div>
        <%})%>
